@using Day1.ViewModel
@model CrsIdNameDeparment
@{
    //ViewData["Title"] = "ConfirmDelete";
}

<h1>Confirm Delete</h1>
<h3> Are You Sure you want to delete this Course ?</h3>
<table class="table table-bordered table-hover">
    <tr>
        <td>CourseID</td>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <td>Course Name</td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td>Department Name</td>
        <td>@Model.department.Name</td>
    </tr>
</table>

<div class="row justify-content-between">
    <div class="col-6">
        <a asp-controller="Course" asp-action="DeleteCourse" asp-route-id="@Model.Id" style="width:100%" class="btn btn-danger">Delete</a>
    </div>
    <div class="col-6">
        <a asp-controller="Course" asp-action="ShowCourses" style="width:100%" class="btn btn-primary">Cancel</a>
    </div>
</div>




