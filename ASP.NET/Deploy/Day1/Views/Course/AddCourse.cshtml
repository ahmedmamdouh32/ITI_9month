@using Day1.ViewModel;
@model CourseDept;

@{
	ViewData["Title"] = "AddCourse";
	Layout = "_Layout";
}

<h1>Add Course</h1>

<form asp-action="SaveCourse" asp-controller="Course"
      method="post" enctype="multipart/form-data">
	<div class="mb-3">
		<label asp-for="Name"></label>
		<input asp-for="Name" class="form-control">
		<span asp-validation-for="Name" class="text-danger "></span>
	</div>

	<div class="mb-3">
		<label asp-for="Degree" class="form-label"></label>
		<input asp-for="Degree" class="form-control">
		<span asp-validation-for="Degree" class="text-danger "></span>

	</div>

	<div class="mb-3">
		<label asp-for="minDegree" class="form-label"></label>
		<input asp-for="minDegree" class="form-control">
		<span asp-validation-for="minDegree" class="text-danger "></span>

	</div>

	<div class="mb-3">
		<label asp-for="Duration" class="form-label"></label>
		<input asp-for="Duration" class="form-control">
		<span asp-validation-for="Duration" class="text-danger "></span>

	</div>

	<div class="mb-3">
		<div class="mb-3">
			<label asp-for="DepartmentId"></label>
			<select asp-for="DepartmentId" asp-items="Model.DepartmentList" class="form-select">
			</select>
		</div>
	</div>

	<div class="mb-3">
		<div class="mb-3">
			<label asp-for="ImageUrl"></label>
			<input asp-for="ImageFile" type="file" class="form-control" />
		</div>
	</div>

	<button type="submit" value="Save" class="btn btn-primary">Add</button>
</form>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

