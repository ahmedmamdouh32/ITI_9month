@using Day1.ViewModel;
@model InstructorDeptCrs


<h1>Add Instructor</h1>

<form action="/Instructor/SaveInstructor/instVM" method="post">
	<div class="mb-3">
		<label for="Name" class="form-label">Name</label>
		<input type="text" class="form-control" id="Name" value="@Model?.Name" name="Name">
	</div>

	<div class="mb-3">
		<label for="ImageSource" class="form-label">Image Source</label>
		<input type="text" class="form-control" id="" value="@Model?.ImageSrc" name="ImageSrc">
	</div>
	
	<div class="mb-3">
		<label for="Salary" class="form-label">Salary</label>
		<input type="number" class="form-control" id="" value="@Model?.Salary" name="Salary">
	</div>

	<div class="mb-3">
		<label for="Address" class="form-label">Address</label>
		<input type="text" class="form-control" id="" value="@Model?.Address" name="Address">
	</div>

	<div class="mb-3">
		<label for="Department">Department</label>
		<select class="form-select" aria-label="Default select example" name="DepartmentId">
			@foreach (var department in Model?.department)
			{
					if(Model.DepartmentId == department.Id)
					{
						<option selected value="@department.Id">@department.Name</option>
					}
					else
					{
						<option value="@department.Id">@department.Name</option>
					}
			}
		</select>
	</div>

	<div class="mb-3">
		<label for="Course">Course</label>
		<select class="form-select" aria-label="Default select example" name="CourseId">
			@foreach (var crs in Model?.course)
			{
				if (Model.CourseId == crs.Id)
				{
					<option selected value="@crs.Id">@crs.Name</option>
				}
				else
				{
					<option value="@crs.Id">@crs.Name</option>
				}
			}
		</select>
	</div>

	<button type="submit" value="Save" class="btn btn-primary">Submit</button>
</form>